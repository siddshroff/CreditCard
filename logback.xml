<?xml version = "1.0" encoding = "UTF-8"?>
<configuration>
    <appender name = "FILE" class = "ch.qos.logback.core.FileAppender">
        <File>/logs/application.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.sss'Z'}] [%C] [%t] [%L] [%-5p] %m%n</pattern>
        </encoder>
    </appender>
    <root level = "INFO">
        <appender-ref ref = "FILE"/>
    </root>
</configuration>